{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "lib": ["es2017", "esnext.asynciterable", "esnext", "dom"],
    "rootDir": "./src",
    "outDir": "./build"
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"]
}
